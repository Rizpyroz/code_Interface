int buzz = 10;
int senRead = A0;  // Mengubah variabel senRead menjadi pin A0 untuk membaca sensor analog
int limit = 850;

void setup() {
  pinMode(buzz, OUTPUT);
  digitalWrite(buzz, LOW);
  Serial.begin(9600);
}

void loop() {
  int val = analogRead(senRead);
  Serial.println(val);
  
  if (val <= limit) {
    digitalWrite(buzz, HIGH);
    delay(20);
    digitalWrite(buzz, LOW);  // Tambahkan perintah untuk mematikan buzzer setelah delay
  } else {
    digitalWrite(buzz, LOW);  // Pastikan buzzer mati jika kondisi tidak terpenuhi
  }

  delay(20);  // Tambahkan delay untuk memperlambat loop (opsional)
}
