int led1=9;
int led2=10;
int led3=11;

int pot=A0; 
int data; 

void setup(){ 
pinMode(led1,OUTPUT); 
  pinMode(led2,OUTPUT); 
  pinMode(led3,OUTPUT); 
pinMode(pot,INPUT); 
  
} void loop(){ 
data=analogRead(pot); 
data=data/4; 
analogWrite(led1,HIGH);
  delay(data);
  analogWrite(led2,HIGH); 
  delay(data);
  analogWrite(led3,HIGH); 
  delay(data);

analogWrite(led1,LOW);
  delay(data);
  analogWrite(led2,LOW); 
  delay(data);
  analogWrite(led3,LOW); 
  delay(data);
  
}
